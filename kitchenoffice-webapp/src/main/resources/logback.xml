<configuration>
	<appender name="ROOTLOGGER" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss,SSS} %-5p [%c{3}] %m%n</pattern>
		</encoder>
		
	</appender>
	<logger name="org.springframework" level="ERROR" />
	<logger name="com.gentics.kitchenoffice" level="DEBUG" />
	<root level="ERROR">
		<appender-ref ref="ROOTLOGGER" />
	</root>
</configuration>